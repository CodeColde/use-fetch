{
  "name": "@codecolde/use-fetch",
  "version": "0.1.5",
  "description": "A react hook that allows a user to fetch data and optionally store it in the browser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "release": "npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeColde/use-fetch.git"
  },
  "author": "CodeColde <hayo.web@gmail.com> (https://www.hayofriese.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeColde/use-fetch/issues"
  },
  "homepage": "https://github.com/CodeColde/use-fetch#readme",
  "dependencies": {
    "react": "^16.11.0"
  },
  "devDependencies": {
    "@types/react": "^16.9.11",
    "prettier": "^1.18.2",
    "tslint": "^6.0.0-beta0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4"
  },
  "files": [
    "dist/**/*"
  ]
}
